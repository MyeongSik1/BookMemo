<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contents_record"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_revise"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/revise_imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:fontFamily="@font/don"
            android:background="@drawable/save_btn"
            android:id="@+id/camear_revise"
            android:text="카메라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/don"
            android:background="@drawable/save_btn"
            android:id="@+id/gild_revise"
            android:text="갤러리"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/don"
            android:background="@drawable/del_btn"
            android:id="@+id/del_revise"
            android:text="삭제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
        android:fontFamily="@font/don"
        android:background="@drawable/save_btn"
        android:id="@+id/revise_button"
        android:text="저장"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    </LinearLayout>









    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:inputType="textMultiLine|textNoSuggestions"
        android:gravity="top"
        android:id="@+id/revise_contents"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

</LinearLayout>